{% extends "index.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/" title="Back to the home page">Home</a>
                </li>
                <li class="breadcrumb-item active">
                    Contact
                </li>
            </ol>
        </div>
        <div class="col-12">
            <div class="section-divider">
                <span class="h3">Contact us</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-8 col-lg-9 push-md-4 push-lg-3">
            <form>
                <div class="form-group row">
                    <label for="name-input" class="col-12 col-form-label">Name <span class="required">*</span></label>
                    <div class="col-12">
                        <input class="form-control" type="text" placeholder="Enter your name" id="name-input">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email-input" class="col-12 col-form-label">E-Mail <span class="required">*</span></label>
                    <div class="col-12">
                        <input class="form-control" type="text" placeholder="Enter your E-Mail address" id="email-input">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="message-input" class="col-12 col-form-label">Message <span class="required">*</span></label>
                    <div class="col-12">
                        <textarea id="message-input" class="form-control extended" placeholder="Drop us a message"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-4 col-lg-3 pull-lg-9 pull-md-8">
            <p class="block-title"><span>Information</span></p>
            <div class="media media-information">
                <i class="float-left fa fa-building"></i>
                <div class="media-body">
                    <strong>Address:</strong><br>
                    Sunset Av, 12345, Berlin
                </div>
            </div>
            <div class="media media-information">
                <i class="float-left fa fa-phone"></i>
                <div class="media-body">
                    <strong>Phone:</strong><br>
                    01234 / 141-4215
                </div>
            </div>
            <div class="media media-information">
                <i class="float-left fa fa-envelope-o"></i>
                <div class="media-body">
                    <strong>E-Mail:</strong><br>
                    <a href="mailto:info@example.com">info@example.com</a>
                </div>
            </div>
            <p class="block-title"><span>Business hours</span></p>
            <p><b>Monday - Friday</b>: 10am - 8pm</p>
        </div>
    </div>
</div>
    <div id="map-canvas"></div>
{% endblock %}

