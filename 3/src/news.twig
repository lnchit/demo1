{% extends "index.twig" %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/" title="Back to the home page">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        News
                    </li>
                </ol>
            </div>
            <div class="col-12">
                <div class="section-divider">
                    <span class="h3">News</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-8 col-xl-9 push-xl-3 push-lg-4">
                <article class="news-article">
                    <div class="row">
                        <div class="col-12">
                            <img src="/img/news-image.png" class="img-fluid" alt="News image"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="date-box"><span class="day">07</span><span class="month">Jun</span></div>
                            <div class="news-text">
                                <h2><a href="#" title="Read more">Test News</a></h2>
